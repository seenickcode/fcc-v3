---


const primaryLight = "bg-primaryMedium text-white dark:bg-primaryDark dark:text-white hover:bg-primaryLight hover:dark:bg-primaryMedium";
const primaryDark = "bg-primaryLight text-white dark:bg-primaryLight dark:text-white hover:bg-primaryDark hover:dark:bg-primaryMedium";

const { label, theme } = Astro.props;

const colors = theme == "primaryLight" ? primaryLight : (theme == "primaryDark" ? primaryDark : "");
---

<span
  class="px-8 py-4 font-sans font-light text-sm ${colors}"
>
  {label}
</span>
